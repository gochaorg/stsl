    <modelVersion>4.0.0</modelVersion>

    <groupId>xyz.cofe</groupId>
    <version>1.0</version>
    <artifactId>stsl-all</artifactId>

    <description>include all dependencies of STSL in one jar</description>

    <properties>
        <java.version>1.8</java.version>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>xyz.cofe</groupId>
            <artifactId>stsl-type</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>xyz.cofe</groupId>
            <artifactId>stsl-parser</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-library</artifactId>
            <!-- используется версия компилятора scala 2.12.x -->
            <version>2.12.16</version>
        </dependency>
        <dependency>
            <groupId>xyz.cofe</groupId>
            <artifactId>sparse</artifactId>
            <version>1.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.3.0</version>
                <dependencies>
                </dependencies>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <includes>
                                    <include>org.scala-lang:scala-library</include>
                                    <include>xyz.cofe:stsl-type</include>
                                    <include>xyz.cofe:stsl-parser</include>
                                    <include>xyz.cofe:sparse</include>
                                </includes>
                            </artifactSet>
                            <relocations>
                                <relocation>
                                    <pattern>scala</pattern>
                                    <shadedPattern>xyz.cofe.stsl.shade.scala</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>xyz.cofe</pattern>
                                    <shadedPattern>xyz.cofe</shadedPattern>
                                </relocation>
                            </relocations>
                            <minimizeJar>true</minimizeJar>
                            <filters>
                                <filter>
                                    <artifact>xyz.cofe:stsl-type</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>xyz.cofe:stsl-parser</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>xyz.cofe:sparse</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>